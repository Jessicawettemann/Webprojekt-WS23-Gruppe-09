include "Header Sicherheit.php";


CREATE TABLE Follower (
    id INT PRIMARY KEY AUTO_INCREMENT,
    follower_username VARCHAR(255) NOT NULL,
    followed_username VARCHAR(255) NOT NULL,
    CONSTRAINT fk_follower_user FOREIGN KEY (follower_username) REFERENCES Nutzer(benutzername),
    CONSTRAINT fk_followed_user FOREIGN KEY (followed_username) REFERENCES Nutzer(benutzername)
);
